.card.my-3
  .card-header.small
    = comment.created_at.strftime('%d-%m-%Y %H:%m')
    (#{time_ago_in_words(comment.created_at)} ago)
    by
    = link_to comment.user, user_path(comment.user)
    - if policy(comment).destroy?
      .float-right
        = link_to [@course, @lesson, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger mx-1" do
          .fa.fa-trash
  .card-body
    = comment.content
